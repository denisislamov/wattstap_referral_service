# WattsTap Referral Service - Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=WattsTap Referral Service
APP_ENV=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/wattstap_referral
DATABASE_ECHO=false

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_BOT_USERNAME=WattsTapBot

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_SECONDS=86400

# Referral System
REFERRAL_BONUS_WATTS=5000
REFERRAL_CODE_LENGTH=8

# CORS
CORS_ORIGINS=["*"]


